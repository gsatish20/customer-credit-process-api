				<ee:transform doc:name="set decision" doc:id="e27be314-0fc2-405e-8564-69ba06da5763" >
					<ee:message >
					</ee:message>
					<ee:variables >
						<ee:set-variable resource="transformations\getCustomerLoanApprovalDecision.dwl" variableName="decision" />
